<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/article_item_corner_radius"
    app:cardElevation="@dimen/article_item_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/article_item_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArticleImage"
            android:layout_width="@dimen/article_item_image_width"
            android:layout_height="@dimen/article_item_image_height"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ibBookmark"
            app:layout_constraintStart_toEndOf="@id/ivArticleImage"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSource"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintEnd_toStartOf="@id/ibBookmark"
            app:layout_constraintStart_toEndOf="@id/ivArticleImage"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivArticleImage"
            app:layout_constraintTop_toBottomOf="@id/tvSource"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibBookmark"
            android:layout_width="@dimen/article_item_button_size"
            android:layout_height="@dimen/article_item_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_bookmarks_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
