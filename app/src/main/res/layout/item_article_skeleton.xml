<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <View
            android:id="@+id/skeletonImage"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/skeletonTitle"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toStartOf="@id/skeletonBookmark"
            app:layout_constraintStart_toEndOf="@id/skeletonImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <View
            android:id="@+id/skeletonSource"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toStartOf="@id/skeletonBookmark"
            app:layout_constraintStart_toEndOf="@id/skeletonImage"
            app:layout_constraintTop_toBottomOf="@id/skeletonTitle"
            app:layout_constraintWidth_percent="0.4" />

        <View
            android:id="@+id/skeletonDescription1"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/skeletonImage"
            app:layout_constraintTop_toBottomOf="@id/skeletonSource"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/skeletonDescription2"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/skeletonImage"
            app:layout_constraintTop_toBottomOf="@id/skeletonDescription1"
            app:layout_constraintWidth_percent="0.6" />

        <View
            android:id="@+id/skeletonBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
